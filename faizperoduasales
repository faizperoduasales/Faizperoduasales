  <!-- Script -->
  <script>
    function changeModel(name, tagline, color) {
      document.getElementById("carName").innerText = "PERODUA " + name;
      document.getElementById("carTagline").innerText = tagline;

      // Tukar warna kereta
      const carPath = document.querySelector("#carDisplay svg path:first-child");
      if (carPath) carPath.setAttribute("fill", color);

      // Animasi slide-in setiap kali tukar model
      const carSVG = document.querySelector("#carDisplay svg");
      carSVG.classList.remove("slide-in");
      void carSVG.offsetWidth; // reset animation
      carSVG.classList.add("slide-in");
    }
  </script>
